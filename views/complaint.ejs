<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Complaint - mintoSpeed</title>
    <meta name="description" content="Easily complaint for your order!">
    <meta name="keywords" content="complaint, order">
    <meta name="author" content="mintoSpeed">
    <meta name="robots" content="index, follow">

    <%- include('partials/headTagContent') %>

        <!-- <script nonce="<%-nonce%>" src="https://www.gstatic.com/firebasejs/9.6.1/firebase-app.js"></script> -->
        <!-- <script nonce="<%-nonce%>" src="https://www.gstatic.com/firebasejs/9.6.1/firebase-database.js"></script> -->
</head>

<body>
    <!-- navbar -->
    <%- include('partials/navbar') %>


        <div class="complaintDiv">
            <div class="feedback-container">
                <h2>Write your complaint</h2>

                <form action="#" class="form">
                    <!-- Radio Button Options -->
                    <label class="radio_head">Please select the reason for your complaint:</label>

                    <div class="radio-options">
                        <label><input type="radio" checked name="complaint" value="Item Not Delivered"> Item Not
                            Delivered</label>
                        <label><input type="radio" name="complaint" value="Received Wrong Item"> Received Wrong
                            Item</label>
                        <label><input type="radio" name="complaint" value="Poor Product Quality"> Poor Product
                            Quality</label>
                        <label><input type="radio" name="complaint" value="Damaged Item Received"> Damaged Item
                            Received</label>
                        <label><input type="radio" name="complaint" value="Late Delivery"> Late Delivery</label>
                        <label><input type="radio" name="complaint" value="Overcharged or Incorrect Price">
                            Overcharged or
                            Incorrect Price</label>
                        <label><input type="radio" name="complaint" value="Missing Items in Order"> Missing Items in
                            Order</label>
                        <label><input type="radio" name="complaint" value="Rude or Unhelpful Customer Service"> Rude
                            or Unhelpful Customer
                            Service</label>
                        <label><input type="radio" name="complaint" value="Website or Payment Issues"> Website or
                            Payment Issues</label>
                        <label><input type="radio" name="complaint" value="Other"> Other </label>
                    </div>

                    <div class="other-comment">
                        <% if (user=='false' ) { %>
                            <input type="email" id="email" placeholder="Enter your email" required />
                            <% } %>
                                <!-- <label for="comments">Additional Details:</label> -->
                                <textarea id="comments" maxlength="5000" minlength="4" name="comments"
                                    placeholder="Please provide more information here..." required></textarea>
                    </div>


                    <button type="submit" class="submitBtn">Submit Complaint</button>
                </form>
            </div>
        </div>


        <style>
            .complaintDiv {
                display: flex;
                justify-content: center;
                padding: 20px 10px;
            }

            .feedback-container {
                width: 100%;
                max-width: 700px;
                background-color: #fff;
                padding: 20px;
                border-radius: 8px;
                box-shadow: 0px 4px 12px rgba(0, 0, 0, 0.1);
                text-align: left;
            }


            h2 {
                margin-bottom: 27px;
                font-size: 18px;
                color: #333;
                text-align: center;
            }

            div.radio-options {
                margin-top: 15px;
                margin-left: 10px;
            }

            .radio-options label {
                display: block;
                text-align: left;
                margin-bottom: 10px;
                font-size: 14px;

            }

            .radio_head {
                margin-left: 0;
            }

            .radio-options input[type="radio"] {
                margin-right: 10px;
                height: 10px;
                width: 10px;
            }

            .other-comment {
                margin-top: 25px;
            }


            input[type="email"],
            textarea {
                position: relative;
                height: 40px;
                width: 100%;
                outline: none;
                font-size: 0.9rem;
                color: #707070;
                margin-top: 10px;
                border: 1px solid #ddd;
                border-radius: 6px;
                padding: 3px 10px;
            }

            textarea {
                min-height: 100px;
                resize: vertical;
            }

            input[type="email"] {
                height: 35px;
            }

            input[type="email"]:focus,
            textarea:focus {
                box-shadow: 0 1px 0 rgba(0, 0, 0, 0.1);
            }

            button {
                width: 100%;
                padding: 10px;
                border: none;
                border-radius: 5px;
                font-size: 16px;
                margin-top: 10px;
                background: rgb(91, 216, 114);
                color: #fff;
                cursor: pointer;
                transition: background-color 0.3s;
            }

            button:hover {
                background: rgb(51, 143, 68);
            }
        </style>


        <script nonce="<%-nonce%>">
            document.addEventListener('DOMContentLoaded', function () {

                document.querySelector(".submitBtn").addEventListener("click", handleSubmit);

                // Validate and submit feedback
                function handleSubmit(event) {
                    event.preventDefault();

                    let email = document.getElementById('email');
                    const feedbackText = document.getElementById('comments').value.trim();

                    if (email) {
                        email = email.value.trim();
                        if (!/\S+@\S+\.\S+/.test(email)) {
                            return showAlert('Please enter a valid email.', 'negative');
                        }
                        email = email.toLowerCase();
                    }
                    else {
                        email = null;
                    }


                    if (!feedbackText) {
                        return showAlert('Please write your feedback.', 'negative');
                    }
                    if (/[#\[\]<>]/.test(feedbackText) || feedbackText.length < 1) {
                        return showAlert('Blank or Input contains harmful characters like #, [, ], < or >.', 'negative');
                    }
                    if (feedbackText.length > 5000) {
                        return showAlert('Please write complaint within 5000 characters..', 'negative');
                    }

                    const radioOptions = document.getElementsByName("complaint");
                    let selectedOption = "";

                    for (const option of radioOptions) {
                        if (option.checked) {
                            selectedOption = option.value;
                            break;
                        }
                    }

                    if (!selectedOption) {
                        showAlert("Please select a reason for your complaint.", 'negative');
                        return;
                    }
                    selectedOption = sanitizeInput(selectedOption);
                    selectedOption = selectedOption.toLowerCase();


                    // Sanitization function to remove potentially harmful characters
                    function sanitizeInput(input) {
                        return input.replace(/[<>\/\\'"]/g, "").trim(); // Remove < > / \ ' "
                    }



                    // Data to send
                    const data = {
                        email: email,
                        selectedOption: selectedOption,
                        feedback: feedbackText.toLowerCase()
                    };

                    // Sending data to the backend
                    document.getElementById("loader_container").style.display = "flex";

                    fetch('/complaint/submit', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json'
                        },
                        body: JSON.stringify(data)
                    })
                        .then(response => response.json())
                        .then(response => {
                            showAlert(response.message, response.type);

                            if (response.type == "positive") {
                                if (email && email != null) {
                                    document.getElementById('email').value = '';
                                }
                                document.getElementById('comments').value = '';
                                document.getElementById("loader_container").style.display = "none";

                            } else {
                                document.getElementById("loader_container").style.display = "none";
                            }
                        })
                        .catch(error => {
                            console.error('Error submitting complaint:', error);
                            showAlert('Failed to submit complaint. Please try again.', 'negative');
                            document.getElementById("loader_container").style.display = "none";
                        });

                }
            });
        </script>


        <!-- footer -->
        <%- include('partials/footer') %>
</body>

</html>