                }

                .pmode label {
                    color: #444444;
                    font-size: 14px;
                }

                .address :where(input, .select-box), .address1 :where(input, .select-box) {
                    margin-top: 15px;
                    font-size: 15px;
                }

                .select-box select {
                    height: 100%;
                    width: 100%;
                    outline: none;
                    border: none;
                    color: #525252;
                    font-size: .9rem;
                    background-color: #f6f6f6;

                }

                .orderBtn, .addressBtn,
                .verifyOtpBtn,
                .timer {
                    height: 55px;
                    width: 100%;
                    color: #fff;
                    font-size: .9rem;
                    font-weight: 400;
                    margin-top: 25px;
                    border: none;
                    cursor: pointer;
                    transition: all 0.2s ease;
                    background: rgb(78, 223, 67);
                }

                .addressBtn{
                    user-select: none;
        cursor: pointer;
